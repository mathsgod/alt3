{% verbatim %}


<div id="div1">
    <div class="table-responsive">
        <r-table remote="System/example/rtable/ds">
            <r-table-column prop="__view__"></r-table-column>

            <r-table-column label="Usergroup" prop="usergroup_id" searchable search-type="multiselect"
                search-method="in"
                :search-option='[{"label":"Administrators","value":1},{"label":"Power Users","value":2},{"label":"Users","value":3},{"label":"Guests","value":4}]'>
            </r-table-column>
            <r-table-column label="Username" prop="username" sortable></r-table-column>
            <r-table-column label="First name" prop="first_name" searchable></r-table-column>
            <r-table-column label="Last name" prop="last_name"></r-table-column>
            <r-table-column label="Email" prop="email"></r-table-column>
            <r-table-column label="Join date" prop="join_date" searchable search-type="date"></r-table-column>
            <r-table-column label="Status" prop="status" searchable search-type="select"
                :search-option='[{"label":"Active","value":0},{"label":"Inactive","value":1}]'></r-table-column>
        </r-table>
    </div>
</div>

<script>
    new Vue({
        el: "#div1"
    });
</script>
{% endverbatim %}