<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <base href="{{base}}" />
    <title>{{app.config.user.company}} | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Theme style -->
    <link rel="stylesheet" href="{{system_base}}/adminlte/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <script src="{{system_base}}/plugins/regenerator-runtime/runtime.min.js"></script>

    <!-- Vue -->
    <script src="{{system_base}}/plugins/vue/vue.js"></script>

    <script src="{{system_base}}/dist/index.js" defer></script>

</head>

<body class="hold-transition login-page">
    <input type="hidden" id="version" value="{{app.version}}" />
    <div class="login-box">
        <div class="login-logo">
            {% if app.config.user.logo %}
            <img src="{{app.config.user.logo}}" />
            {% else %}
            {{app.config.user.company}}
            {% endif %}
        </div>
        <!-- /.login-logo -->
        <div id="app"></div>
    </div>
    <!-- /.login-box -->
</body>

</html>